---
// RUNTIME
const runtime = Astro.locals.runtime;

const {

	CDN,
	ENDPOINT,
	ENVIRONMENT,
	PROJECT,
	WEBSITE,

} = runtime.env

const data = await homeAPI( ENVIRONMENT, ENDPOINT )

// API
import { homeAPI } from "@/api/home/index"

const {

	highlights,
	home_data,
	industries,
	meta_tags,
	news,
	projects,
	services,
	testimonials

} = data

// IMPORTS ASTRO LAYOUTS
import Layout from "@/layouts/layout/index.astro"

// IMPORTS ASTRO COMPONENTS
import Home from "@/components/home/index.astro"

---
<Layout
	CDN={ CDN }
	description={ meta_tags.description }
	image={ meta_tags.image }
	PROJECT={ PROJECT }
	title={ meta_tags.title }
>
	<Home
		CDN={ CDN }
		ENVIRONMENT={ ENVIRONMENT }
		highlights={ highlights }
		home_data={ home_data }
		industries={ industries }
		news={ news }
		PROJECT={ PROJECT }
		projects={ projects }
		services={ services }
		testimonials={ testimonials }
	/>
</Layout>
