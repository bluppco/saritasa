---

// IMPORTS ASTRO ATOMS
import FooterHeading from "@/atoms/footer/heading/index.astro"
import Link from "@/atoms/links/index.astro"

// GET ASTRO PROPS
const {

    data,
    title

} = Astro.props

---
<div class="flex flex-col gap-4">
    <FooterHeading>{ title }</FooterHeading>
    <ul class="space-y-1">
        {

            data.map( ( item ) => {

                return (
                    <li class="font-avenir text-xs text-white">
                        <Link href={ item.data.link } aria_label={ item.data.title }>
                            <p>{ item.data.title }</p>
                        </Link>
                    </li>

                )

            })

        }
    </ul>
</div>
