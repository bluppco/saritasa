---
// IMPORT ASTRO ATOMS
import HeadingTwoBlue from "../../../atoms/heading/TwoBlue.astro"

const data = Array(10).fill({

    title: "Medical/Pharma"

})
---
<section class="space-y-6 py-20 px-32">
    <HeadingTwoBlue>Industries We Serve:</HeadingTwoBlue>
    <div class="grid grid-cols-2 gap-2">
        {

            data.map( ( value ) => {

                return(
                    <div class="hover:shadow-2xl hover:bg-white p-2 cursor-pointer">
                        <p class="text-2xl font-avenir">-  { value.title }</p>
                    </div>
                )

            })

        }
    </div>
</section>
