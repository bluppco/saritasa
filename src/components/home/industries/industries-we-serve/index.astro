---

// IMPORTS ASTRO ATOMS
import HeadingTwoBlue from "@/atoms/headings/two/blue/index.astro"

// GET ASTRO PROPS
const {

    data,
    title

} = Astro.props

---
<section class="space-y-6 py-6 md:py-20 bg-white px-4 md:px-32">
    <HeadingTwoBlue>{ title }</HeadingTwoBlue>
    <div class="grid md:grid-cols-2 gap-x-10">
        {

            data.map( ( value, index ) => {

                return(
                    <div class={` ${ index < 2 ? "box-shadow hover:bg-white cursor-pointer" : "" }  p-2`}>
                        <p class="text-2xl font-avenir">-  { value.name }</p>
                    </div>
                )

            })

        }
    </div>
</section>
