---

// IMPORTS ASTRO ATOMS
import HeadingTwoBlue from "@/atoms/headings/two/blue/index.astro"

// GET ASTRO PROPS
const {

    data,
    title

} = Astro.props

---
<section class="space-y-6 py-20 md:px-32 bg-white">
    <HeadingTwoBlue>{ title }</HeadingTwoBlue>
    <div class="grid md:grid-cols-2 gap-x-10">
        {

            data.map( ( value ) => {

                return(
                    <div class="hover:shadow-2xl hover:shadow-zinc-200 hover:bg-white p-2 cursor-pointer">
                        <p class="text-2xl font-avenir">-  { value.name }</p>
                    </div>
                )

            })

        }
    </div>
</section>
