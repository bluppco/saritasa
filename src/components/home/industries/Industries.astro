---
// IMPORTS CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../../constants/cdn"

// IMPORTS ASTRO COMPONENTS
import IndustriesWeServe from "./IndustriesWeServe.astro"

const { data, industries } = Astro.props
---
<section class="grid grid-cols-2 border-t border-saritasa_primary mt-60">
    <section class="flex items-center justify-center bg-zinc-200" style=`background-image: url(${ CDN_LINK + data.cover + "?quality=" + IMAGE_QUALITY })`>
        <div class="bg-white/70 rounded-full p-8 flex gap-4 w-fit">
            <div class="w-20 aspect-square">
                <img
                    src="/play.svg"
                    alt=""
                    class="w-20 aspect-square"
                />
            </div>
            <div>
                <p class="text-saritasa_primary text-4xl font-avenir">{ data.title }</p>
                <p class="text-saritasa_primary text-2xl font-avenir">{ data.description }</p>
            </div>
        </div>
    </section>
    <section>
        <IndustriesWeServe data={ industries } title={ data.section } />
    </section>
</section>
