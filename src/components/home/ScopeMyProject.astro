---
// IMPORT ASTRO COMPONENTS
import HeadingTwoWhite from "../../atoms/heading/TwoWhite.astro"
import ButtonWhite from "../../atoms/button/White.astro"

// IMPORTS CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../constants/cdn"

const { data } = Astro.props
---
<section class="h-[420px] pt-32 relative">
    <div class="bg-no-repeat bg-cover bg-white z-10 w-full h-full absolute top-0" style=`background-image: url(${ CDN_LINK + data.cover + "?quality=" + IMAGE_QUALITY })`>
        <div class="relative flex flex-col gap-8 items-center justify-center h-full">
            <HeadingTwoWhite>{ data.title }</HeadingTwoWhite>
            <ButtonWhite>{ data.button_one_text }</ButtonWhite>
        </div>
    </div>
</section>
