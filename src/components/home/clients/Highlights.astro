---
// IMPORTS ASTRO COMPONENTS
import Container from "../../../layouts/Container.astro";
import Highlightsitem from "./Highlightsitem.astro"

const data = Array(4).fill({

    title: "Successful Projects",
    statistics: "1769",
    src: "",
    alt: ""

})
---
<section class="absolute -bottom-40 w-full">
    <Container>
        <section class="flex justify-between bg-white rounded-2xl shadow px-24 py-10">
            {

                data.map( ( value ) => {

                    return(
                        <Highlightsitem
                            title={ value.title }
                            statistics={ value.statistics }
                            src={ value.src }
                            alt={ value.alt }
                        />
                    )

                })

            }
        </section>
    </Container>
</section>
