---

// IMPORTS ASTRO COMPONENTS
import Image from "./image/index.astro"

// GET ASTRO PROPS
const {

    CDN,
    data,
    PROJECT

} = Astro.props

// SORTS THE IMAGES ARRAY
const images = data.images.sort(( a,b ) => a.order - b.order )

---
<section class="before:bg-[url('/background-dark.webp')] before:bg-[length:100px] before:absolute before:w-full before:h-full before:top-0 before:-z-[5] py-4 md:py-0">
    <div class="grid grid-cols-3 gap-x-8 md:gap-x-10 gap-y-8 md:gap-y-20 py-10 px-4 md:p-20">
    {

        images.map( ( value ) => {

            return(
                <Image
                    alternative_text=""
                    CDN={ CDN }
                    image_width="200"
                    PROJECT={ PROJECT }
                    source={ value.file }
                />
            )

        })

    }
    </div>
</section>