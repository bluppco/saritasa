---
// IMPORTS ASTRO COMPONENTS
import Image from "./image/index.astro"

const { data } = Astro.props

const images = data.images.sort(( a,b ) => a.order - b.order )
---
<section class="before:bg-[url('/background-dark.webp')] before:bg-[length:100px] before:absolute before:w-full before:h-full before:top-0 before:-z-[5]">
    <div class="grid grid-cols-3 gap-x-10 gap-y-20 p-20">
    {

        images.map( ( value ) => {

            return(
                <Image
                    src={ value.file }
                    alt=""
                    image_width="200"
                />
            )

        })

    }
    </div>
</section>