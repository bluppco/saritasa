---
const {

    title,
    statistics,
    src,
    alt

} = Astro.props
---
<div class="flex flex-col gap-4 justify-center items-center">
    <div class="w-10 aspect-square bg-zinc-200">
        <img
            src={ src }
            alt={ alt }
            class="w-10 aspect-square"
        />
    </div>
    <p class="text-5xl text-saritasa_primary font-avenir font-semibold text-center">{ statistics }</p>
    <p class="text-lg text-saritasa_primary font-avenir font-semibold text-center">{ title }</p>
</div>
