---

// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO COMPONENTS
import AllArticles from "@/components/home/in-the-news/all-articles/index.astro"
import ClutchRanking from "@/components/home/in-the-news/clutch-ranking/index.astro"

// IMPORTS ASTRO ATOMS
import HeadingTwoCenter from "@/atoms/headings/two/center/index.astro"

// GET ASTRO PROPS
const {

    CDN,
    data,
    news,
    PROJECT

} = Astro.props

---
<Container>
    <section class="space-y-8 py-16">
        <HeadingTwoCenter>{ data.section }</HeadingTwoCenter>
        <section class="grid grid-cols-3 gap-6">
            <section>
                <ClutchRanking
                    CDN={ CDN }
                    data={ data }
                    PROJECT={ PROJECT }
                />
            </section>
            <section class="col-span-2">
                <AllArticles
                    CDN={ CDN }
                    data={ news }
                    PROJECT={ PROJECT }
                />
            </section>
        </section>
    </section>
</Container>
