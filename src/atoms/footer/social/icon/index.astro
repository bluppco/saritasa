---

// GET ASTRO PROPS
const {

    alternative_text,
    source

} = Astro.props

---
<div class="border rounded-full p-2">
    <div class="w-6 aspect-square">
        <img
            src={ source }
            alt={ alternative_text }
            class="w-6 aspect-square"
        />
    </div>
</div>
